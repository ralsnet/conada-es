{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "customConditions": ["source"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
